# Production Database Configuration
# Copy this file to .env.prod and fill in your actual values
# Then run: source .env.prod && go run . test-dp-rebalance --league <slug> --season <num>

# Database connection (set these to your production readonly credentials)
export DB_HOST="your-prod-db-host"           # e.g., 10.x.x.x or prod-db.internal
export DB_PORT="5432"
export DB_NAME="liwords"
export DB_USER="readonly_user"
export DB_PASSWORD="your-readonly-password"
export DB_SSL_MODE="require"                 # Use 'require' for production

# Redis (optional - only needed if some operations require it)
# export REDIS_URL="redis://prod-redis:6379/0"
